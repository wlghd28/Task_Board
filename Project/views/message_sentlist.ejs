                    <% Message.forEach(function (message, index) { %>
                        <% if(index + 1 >= Message.length) { %>
                            <% str_receivername += message.receiver_username; %>
                            <% if (parseInt(pageindex / page_quantity + 1) == pagenum)  { %>
